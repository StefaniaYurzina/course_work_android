<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.MireaPageFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/mirea_big" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Московский институт радиотехники, электроники и автоматики"
                android:textColor="@color/main"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="22dp"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="•  государственный"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="32dp"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="•  с общежитием"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="32dp"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="•  г. Москва"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="32dp"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="20dp"
                android:text="МИРЭА - Российский технологический университет: более 4 000 бюджетных мест ежегодно по наиболее востребованным программам высшего и среднего образования, более 3 500 мест в общежитиях, более 500 образовательных программ и более 45 программ дополнительного образования. Современная материально-техническая база, комфортные условия для учебы и отдыха, 7 кампусов по Москве, 2 филиала по России, 3 современных спортивных комплекса." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="32dp"
                android:layout_marginBottom="64dp"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:layout_width="109dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/documents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Подать документы?"
                        android:layout_marginBottom="24dp"/>


                    <TextView
                        android:id="@+id/adress"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:text="Адрес:"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:text="Номер:"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/mail"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:text="Почта:"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonDocuments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Сайт приемной комиссии"
                        android:layout_marginBottom="24dp"/>

                    <TextView
                        android:id="@+id/adressText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Москва, Пр-т Вернадского, д.78"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/numberText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+7 (499) 215-65-65"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/mailText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="rector@mirea.ru"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>



